{
    "name": "Fedora DevBox",
    "workspaceFolder": "/workspaces",
    "containerEnv": {
        "DEV_CONTAINER": "1",
        "LANG": "en_US.UTF-8",
        "LC_ALL": "en_US.UTF-8"
    },
    "build": {
        "dockerfile": "../images/Dockerfile",
        "args": {
            "HANZO_USERNAME": "${localEnv:HANZO_USERNAME}",
            "HANZO_FULLNAME": "${localEnv:HANZO_FULLNAME}",
            "HANZO_EMAIL": "${localEnv:HANZO_EMAIL}"
        }
    },
    "runArgs": [
        "--net=host"
    ],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=workspaces,target=/home/${localEnv:HANZO_USERNAME}/workspaces,type=volume"
    ],
    "postCreateCommand": "sudo usermod -aG docker ${localEnv:HANZO_USERNAME} && sudo chown root:docker /var/run/docker.sock",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true,
            "username": "${localEnv:HANZO_USERNAME}"
        }
    }
}
